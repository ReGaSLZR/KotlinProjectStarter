<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/jokeRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_medium"
        android:background="@color/white">

    <TextView
            android:id="@+id/label_jokeId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label_joke_id"
            style="@style/text_label" />

    <TextView
            android:id="@+id/value_jokeId"
            android:layout_alignBaseline="@+id/label_jokeId"
            android:layout_toEndOf="@+id/label_jokeId"
            android:layout_toRightOf="@+id/label_jokeId"
            tools:text="1234"
            style="@style/text_value" />

    <TextView
            android:id="@+id/label_jokeType"
            android:layout_below="@id/label_jokeId"
            android:text="@string/label_joke_type"
            style="@style/text_label" />

    <TextView
            android:id="@+id/value_jokeType"
            android:layout_alignBaseline="@+id/label_jokeType"
            android:layout_toEndOf="@+id/label_jokeType"
            android:layout_toRightOf="@+id/label_jokeType"
            tools:text="General"
            style="@style/text_value" />

    <TextView
            android:id="@+id/value_jokeSetup"
            android:layout_width="match_parent"
            android:layout_below="@+id/label_jokeType"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:textAlignment="center"
            android:textSize="@dimen/text_midlarge"
            tools:text="This is a test joke."
            style="@style/text_value" />

    <TextView
            android:id="@+id/value_jokePunchline"
            android:layout_width="match_parent"
            android:layout_below="@+id/value_jokeSetup"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:textAlignment="center"
            tools:text="LOL"
            style="@style/text_value" />

</RelativeLayout>